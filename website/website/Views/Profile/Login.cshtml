@model website.Models.UserLoginModel
@{
    ViewData["Title"] = "Вхід";
}

<h3>Вхід</h3>
<hr />
<div asp-validation-summary=" All" class="text-danger"></div>
<form class="form-horizontal" asp-action="Login" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="UserName">Імя користувача(логін):</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Password">Пароль:</label>
        <div class="col-sm-10">
            <input class="form-control" type="password" asp-for="Password" />
        </div>
    </div>
    <div style="text-align:center">
        <button class="btn btn-success" type="submit">Увійти</button>
    </div>
</form>
<br />
